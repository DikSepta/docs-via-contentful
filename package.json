{
  "name": "rubix-documents",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "npm run generate-document-json && next build",
    "start": "next start",
    "lint": "npx lint . --quiet",
    "lint:fix": "npx lint . --fix --quiet",
    "format": "npx prettier --write . --log-level warn",
    "format:check": "npx prettier --check .",
    "clean": "npm run lint:fix && npm run format && pnpm run format:check",
    "update": "npx npm-check-updates -u && npm install && npm run clean",
    "generate-document-json": "ts-node --project tsconfig.scripts.json scripts/document.ts",
    "generate-content-json": "ts-node scripts/content.ts",
    "generate-content-json:ide": "node -r esbuild-register scripts/content.ts",
    "prepare": "husky",
    "typesafe-i18n": "typesafe-i18n"
  },
  "dependencies": {
    "@contentful/rich-text-plain-text-renderer": "^17.0.1",
    "@contentful/rich-text-react-renderer": "^16.0.2",
    "@next/third-parties": "^15.3.3",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/postcss": "^4.1.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentful": "^11.7.6",
    "dotenv": "^17.2.0",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "mermaid": "^11.6.0",
    "next": "^15.3.3",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-katex": "^7.0.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.4",
    "typesafe-i18n": "^5.26.2",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@contentful/rich-text-types": "^17.0.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.3",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
